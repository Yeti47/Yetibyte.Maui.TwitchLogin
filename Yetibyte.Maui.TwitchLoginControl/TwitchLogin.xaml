<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Yetibyte.Maui.TwitchLoginControl.TwitchLogin"
             xmlns:vm="clr-namespace:Yetibyte.Maui.TwitchLoginControl.ViewModels"
             x:DataType="vm:TwitchLoginViewModel"
             >
    <Grid VerticalOptions="Fill" HorizontalOptions="Fill">
        <WebView 
            x:Name="webViewLogin" 
            Source="{Binding AuthenticationUrl}" 
            HorizontalOptions="Fill"
            VerticalOptions="Fill"
            Navigating="webViewLogin_Navigating"
        />
    </Grid>
</ContentView>
